{
	"env": {
		"browser": true,
		"es2021": true,
		"jest/globals": true
	},
	"extends": [
		"react-app",
		"plugin:react/recommended",
		"plugin:jest/recommended",
		"prettier"
	],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"no-underscore-dangle": 0,
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "always",
				"jsx": "always"
			}
		]
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "jest"]
}
